<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Board.Register.BoardMainRegisterActivity"
    >

    <data>

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener"
            />

    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <include
            android:id="@+id/layout_appbar"
            layout="@layout/layout_appbar_plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"

                >

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/txt_platform"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/accentColor"
                        android:gravity="center"
                        android:text="플랫폼"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <RadioGroup
                        android:id="@+id/radiogroup_platform"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/txt_platform"
                        app:layout_constraintTop_toTopOf="parent"
                        >


                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/radio_ps4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:onClick="@{onClickListener::onClick}"
                            android:text="PS"
                            android:textColor="@color/ps4Color"
                            app:buttonTint="@color/ps4Color"
                            />

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/radio_xbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{onClickListener::onClick}"
                            android:text="XBOX"
                            android:textColor="@color/xboxColor"
                            app:buttonTint="@color/xboxColor"
                            />

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/radio_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{onClickListener::onClick}"
                            android:text="SWITCH"
                            android:textColor="@color/switchColor"
                            app:buttonTint="@color/switchColor"
                            />
                    </RadioGroup>


                    <TextView
                        android:id="@+id/txt_title"
                        android:layout_width="90dp"
                        android:layout_height="45dp"
                        android:background="@color/accentColor"
                        android:gravity="center"
                        android:text="제목"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_platform"
                        />

                    <EditText
                        android:id="@+id/edit_title"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:background="@color/white"
                        android:gravity="start|center_vertical"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:hint="게임 제목을 입력해주세요"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textColorHint="@color/middarkGrey"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/txt_title"
                        app:layout_constraintTop_toBottomOf="@id/txt_platform"
                        />

                    <TextView
                        android:id="@+id/txt_review"
                        android:layout_width="90dp"
                        android:layout_height="200dp"
                        android:background="@color/accentColor"
                        android:gravity="center"
                        android:text="리뷰"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_title"
                        />

                    <EditText
                        android:id="@+id/edit_review"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:background="@color/white"
                        android:gravity="top|center_vertical"
                        android:paddingTop="8dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"
                        android:hint="리뷰를 입력해주세요"
                        android:inputType="none"
                        android:textColor="@color/black"
                        android:textColorHint="@color/middarkGrey"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/txt_review"
                        app:layout_constraintTop_toBottomOf="@+id/txt_title"
                        />







                    <SeekBar
                        android:id="@+id/seekbar"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:max="99"
                        android:layout_marginTop="8dp"
                        android:background="@null"
                        android:shape="oval"
                        android:splitTrack="false"
                        android:progress="0"
                        android:progressDrawable="@drawable/seekbar"
                        app:layout_constraintTop_toBottomOf="@+id/txt_num"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:targetApi="lollipop"
                        android:secondaryProgress="0"
                        android:thumbOffset="10dp"
                        android:thumb="@drawable/seekbar_thumb"
                        />

                    <TextView
                        android:id="@+id/txt_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/thirdColor"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:text="0.0점"
                        android:elevation="3dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="32dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_review"
                        tools:targetApi="lollipop"
                        />

                    <TextView
                        android:id="@+id/txt_nothing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/thirdColor"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:text="평점"
                        android:elevation="3dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="32dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_review"
                        tools:targetApi="lollipop"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/midGrey"
                        app:layout_constraintTop_toTopOf="@+id/txt_title"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/midGrey"
                        app:layout_constraintTop_toTopOf="@+id/txt_review"
                        />


                </android.support.constraint.ConstraintLayout>
            </android.support.v4.widget.NestedScrollView>
        </android.support.constraint.ConstraintLayout>
    </android.support.design.widget.CoordinatorLayout>

</layout>