<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Game.Register.GameRegisterActivity"
    >

    <data>

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener"
            />

    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <include
            android:id="@+id/layout_appbar"
            layout="@layout/layout_appbar_plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"

                >

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >


                    <TextView
                        android:id="@+id/txt_platform"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/accentColor"
                        android:gravity="center"
                        android:text="플랫폼"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <RadioGroup
                        android:id="@+id/radiogroup_platform"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/txt_platform"
                        app:layout_constraintTop_toTopOf="parent"
                        >


                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/radio_ps4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:onClick="@{onClickListener::onClick}"
                            android:text="PS"
                            android:textColor="@color/ps4Color"
                            app:buttonTint="@color/ps4Color"
                            />

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/radio_xbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{onClickListener::onClick}"
                            android:text="XBOX"
                            android:textColor="@color/xboxColor"
                            app:buttonTint="@color/xboxColor"
                            />

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/radio_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{onClickListener::onClick}"
                            android:text="SWITCH"
                            android:textColor="@color/switchColor"
                            app:buttonTint="@color/switchColor"
                            />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/txt_place"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:background="@color/accentColor"
                        android:gravity="center"
                        android:text="위치"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_platform"
                        />

                    <EditText
                        android:id="@+id/edit_place"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:hint="예) ㅎㅇㄹ, 인터넷, 기타"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textColorHint="@color/middarkGrey"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/txt_place"
                        app:layout_constraintTop_toBottomOf="@+id/txt_platform"
                        />


                    <TextView
                        android:id="@+id/txt_title"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:background="@color/accentColor"
                        android:gravity="center"
                        android:text="타이틀"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_place"
                        />

                    <EditText
                        android:id="@+id/edit_title"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:hint="예) 갓오브워, 스파이더맨, 피파19"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textColorHint="@color/middarkGrey"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/txt_title"
                        app:layout_constraintTop_toBottomOf="@+id/txt_place"
                        />

                    <TextView
                        android:id="@+id/txt_money"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:background="@color/accentColor"
                        android:gravity="center"
                        android:text="가격"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_title"
                        />

                    <EditText
                        android:id="@+id/edit_money"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:hint="예) 60,000원"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textColorHint="@color/middarkGrey"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/txt_money"
                        app:layout_constraintTop_toBottomOf="@+id/txt_title"
                        />


                    <TextView
                        android:id="@+id/txt_resell"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:background="@color/accentColor"
                        android:gravity="center"
                        android:text="매각/매입"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_money"
                        />

                    <RadioGroup
                        android:id="@+id/radiogroup_resell"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/txt_resell"
                        app:layout_constraintTop_toTopOf="@+id/txt_resell"
                        >


                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/radio_buy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="매입"
                            android:textColor="@color/green"
                            app:buttonTint="@color/green"
                            />

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/radio_sold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="매각"
                            android:textColor="@color/Red"
                            app:buttonTint="@color/Red"

                            />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/txt_newOld"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:background="@color/accentColor"
                        android:gravity="center"
                        android:text="신품/중고"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_resell"
                        />

                    <RadioGroup
                        android:id="@+id/radiogroup_newOld"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/txt_newOld"
                        app:layout_constraintTop_toTopOf="@+id/txt_newOld"
                        >


                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/radio_new"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="신품"
                            android:textColor="@color/green"
                            app:buttonTint="@color/green"
                            />

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/radio_old"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="중고"
                            android:textColor="@color/Red"
                            app:buttonTint="@color/Red"

                            />
                    </RadioGroup>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/midGrey"
                        app:layout_constraintBottom_toBottomOf="@+id/txt_platform"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/midGrey"
                        app:layout_constraintBottom_toBottomOf="@+id/txt_place"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/midGrey"
                        app:layout_constraintBottom_toBottomOf="@+id/txt_money"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/midGrey"
                        app:layout_constraintBottom_toBottomOf="@+id/txt_title"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/midGrey"
                        app:layout_constraintBottom_toBottomOf="@+id/txt_resell"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/midGrey"
                        app:layout_constraintBottom_toBottomOf="@+id/txt_newOld"
                        />


                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="0dp"
                        android:background="@color/midGrey"
                        app:layout_constraintBottom_toBottomOf="@+id/txt_newOld"
                        app:layout_constraintEnd_toEndOf="@+id/txt_resell"
                        app:layout_constraintTop_toTopOf="@id/txt_platform"
                        />

                </android.support.constraint.ConstraintLayout>
            </android.support.v4.widget.NestedScrollView>
        </android.support.constraint.ConstraintLayout>
    </android.support.design.widget.CoordinatorLayout>

</layout>