<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="model"
            type="com.dev.skh.resellium.Game.Model.GameMainModel"
            />

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener"
            />

    </data>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/const_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_useractv"
        android:elevation="3dp"
        >

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLength="8"
            android:maxLines="1"
            android:text="@{model.title}"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txt_sell"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="스파이더맨"
            />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:gravity="start"
            android:textColor="@color/darkGrey"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/txt_title"
            app:timeAgo="@{model.date}"
            tools:text="2018-09-19 23:44:45"
            />

        <TextView
            android:id="@+id/txt_platform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="14dp"
            android:maxLength="8"
            android:maxLines="1"
            android:text="@{model.place}"
            android:textColor="@color/secondaryTextColor"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_date"
            tools:text="PS4"
            />


        <TextView
            android:id="@+id/txt_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:gravity="start"
            android:letterSpacing="0.05"
            android:textColor="@color/black"
            android:textSize="12.5sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_platform"
            app:moneyCheck="@{model.money}"
            tools:text="42,000원"
            />

        <TextView
            android:id="@+id/img_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_action_comment"
            app:setComment="@{model.comment}"
            android:textColor="@color/fabColor"
            android:layout_marginBottom="8dp"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="5개 댓글"
            />


        <TextView
            android:id="@+id/txt_sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:letterSpacing="0.05"
            android:textColor="@color/Red"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:sellCheck="@{model.which}"
            tools:text="중고매입"
            />


    </android.support.constraint.ConstraintLayout>

</layout>