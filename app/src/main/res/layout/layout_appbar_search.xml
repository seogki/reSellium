<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="title"
            type="String"/>

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener"
            />

    </data>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/main_search_toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp"
            app:elevation="0dp"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            >


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                >

                <EditText

                    android:background="@drawable/text_stroke_ps4"
                    android:id="@+id/edit_search"
                    android:hint="검색어를 입력해주세요"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkGrey"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingStart="11dp"
                    android:paddingEnd="38dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/layout_undo"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <ImageView
                    android:id="@+id/img_search"
                    android:src="@drawable/if_shop_search_1469731"
                    android:layout_width="40dp"
                    android:paddingEnd="4dp"
                    android:paddingStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_height="0dp"
                    android:onClick="@{onClickListener::onClick}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/layout_undo"
                    app:layout_constraintBottom_toBottomOf="@id/layout_undo"
                    />

                <ImageView
                    android:id="@+id/layout_undo"
                    android:background="@color/ps4Color"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    android:padding="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:onClick="@{onClickListener::onClick}"
                    android:src="@drawable/icons8_undo_24"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@drawable/titlebar_grey_line"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

</layout>