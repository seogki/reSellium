<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener"
            />

    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <include
            android:id="@+id/layout_appbar"
            layout="@layout/layout_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/nestedScroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                >

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/const_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginTop="8dp"
                        android:paddingStart="8dp"
                        android:background="@color/white"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/txt_grade"
                        android:textSize="18sp"
                        android:gravity="center_vertical"
                        android:text="평점 랭킹"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:id="@+id/view_img"
                        app:layout_constraintTop_toTopOf="@id/txt_grade"
                        app:layout_constraintStart_toEndOf="@id/txt_grade"
                        />

                    <ImageView
                        android:id="@+id/img_grade"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/icons8_star_24"
                        app:layout_constraintTop_toTopOf="@+id/txt_grade"
                        app:layout_constraintBottom_toBottomOf="@+id/txt_grade"
                        app:layout_constraintStart_toEndOf="@+id/txt_grade"
                        />



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/midGrey"
                        android:id="@+id/view_grade"
                        app:layout_constraintTop_toBottomOf="@+id/txt_grade"
                        />

                    <android.support.design.widget.TabLayout
                        android:id="@+id/tablayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@color/white"
                        app:tabGravity="fill"
                        app:tabIndicatorColor="@color/black"
                        app:tabMode="fixed"
                        app:tabPaddingEnd="0dp"
                        app:tabPaddingStart="0dp"
                        app:layout_constraintTop_toBottomOf="@+id/view_grade"
                        app:tabSelectedTextColor="@color/black"
                        app:tabTextColor="@color/midGrey"
                        >
                    </android.support.design.widget.TabLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/midGrey"
                        app:layout_constraintBottom_toBottomOf="@id/tablayout"
                        />

                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:background="@color/white"
                        app:layout_constraintTop_toBottomOf="@+id/tablayout"
                        />

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/const_ps4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@color/white"
                        android:elevation="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/viewpager"
                        >


                        <TextView
                            android:id="@+id/txt_ps4"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:text="최근 PS 항목"
                            android:textColor="@color/ps4Color"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/midGrey"
                            android:id="@+id/view_ps4"
                            app:layout_constraintTop_toBottomOf="@+id/txt_ps4"
                            />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_ps4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/view_ps4"
                            />

                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/const_xbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@color/white"
                        android:elevation="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/const_ps4"
                        >

                        <TextView
                            android:id="@+id/txt_xbox"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:text="최근 XBOX 항목"
                            android:textColor="@color/xboxColor"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/midGrey"
                            android:id="@+id/view_xbox"
                            app:layout_constraintTop_toBottomOf="@+id/txt_xbox"
                            />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_xbox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/view_xbox"
                            />


                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/const_switch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@color/white"
                        android:elevation="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/const_xbox"
                        >

                        <TextView
                            android:id="@+id/txt_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:text="최근 SWITCH 항목"
                            android:textColor="@color/switchColor"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/midGrey"
                            android:id="@+id/view_switch"
                            app:layout_constraintTop_toBottomOf="@+id/txt_switch"
                            />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_switch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/view_switch"
                            />


                    </android.support.constraint.ConstraintLayout>

                </android.support.constraint.ConstraintLayout>
            </android.support.v4.widget.NestedScrollView>
        </android.support.constraint.ConstraintLayout>
    </android.support.design.widget.CoordinatorLayout>
</layout>