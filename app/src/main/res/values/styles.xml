<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>

    </style>

    <style name="CustomHomeAppTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="colorPrimaryDark">@color/statusBar</item>
        <item name="android:windowBackground">@color/white</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:itemBackground">@color/white</item>

    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>


    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/fabColor</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/fabColor</item>
    </style>

    <style name="text10Style">
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="spinnerStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Popup Menu Text Color styles -->

    <style name="TextButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>

        <item name="android:background">@drawable/text_round_white_border_grey</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/middarkGrey</item>
    </style>

    <style name="TextButtonSecondaryStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/text_round_secondary_border_grey</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="MyEditTextTheme" parent="Widget.AppCompat.EditText">

        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/fabColor</item>
        <item name="colorControlHighlight">@color/fabColor</item>
    </style>

    <style name="registerTextTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/left_round_white</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="registerEditTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:background">@drawable/right_round_white</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/middarkGrey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="horizontalViewMidGreyTheme">
        <item name="android:background">@color/midGrey</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
    </style>
    
    
    <style name="CustomToolbarTheme">
        <item name="android:background">@color/toolbarColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="titleTextTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="settingImageTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:src">@drawable/ic_action_setting</item>
    </style>


    <style name="undoImageTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:src">@drawable/ic_action_arrow_back</item>

    </style>

    <style name="addImageTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:src">@drawable/ic_action_add</item>

    </style>

</resources>
